from random import randint
import time

class BoardException(Exception):
    pass

class BoardOutException(BoardException):
    def __str__(self):
        return "You are shoot off the board!"

class BoardUsedException(BoardException):
    def __str__(self):
        return "You did shoot to that cell already!"

class BoardWrongShipException(BoardException):
    pass


class Dot:
    def __init__(self, x, y):
        self.x = x
        self.y = y

    def __eq__(self, other):
        return self.x == other.x and self.y == other.y

    def __repr__(self):
        return f"Dot {self.x}, {self.y}"


class Ship:
    def __init__(self, bow, o, l):
        self.bow = bow
        self.o = o
        self.l = l
        self.lives = l

    @property
    def dots(self):
        ship_dots = []
        for i in range(self.l):
            ship_x = self.bow.x
            ship_y = self.bow.y
            if self.o == 1:
                ship_x += i
            elif self.o == 0:
                ship_y += i
            ship_dots.append(Dot(ship_x, ship_y))
        return ship_dots

    def shooten(self, shot):
        return shot in self.dots

class Board:
    def __init__(self, size=6, hidden=False):
        self.size = size
        self.hidden = hidden

        self.destroyed = 0
        self.field = [["O"] * size for _ in range(size)]
        self.busy = []
        self.ships = []

    def __str__(self):
        brd = ""
        brd += "  | 1 | 2 | 3 | 4 | 5 | 6 |"
        for i, row in enumerate(self.field):
            brd += f"\n{i +1} | " + " | ".join(row) + " | "

        if self.hidden:
            brd = brd.replace("■", "O")
        return brd

    def dot_out(self, d):
        return not ((0 <= d.x < self.size) and (0 <= d.y < self.size))

    def contour_ship(self, ship, verb = False):
        near_dots = [
            (-1, -1), (-1, 0), (-1, 1),
            (0, -1), (0, 0), (0, 1),
            (1, -1), (1, 0), (1, 1)
        ]
        for i in ship.dots:
            for ix, iy in near_dots:
                cur_dot = Dot(i.x + ix, i.y + iy)
                if not (self.dot_out(cur_dot)) and cur_dot not in self.busy:
                    if verb:
                        self.field[cur_dot.x][cur_dot.y] = "."
                    self.busy.append(cur_dot)


    def add_ship(self, ship):
        for i in ship.dots:
            if self.dot_out(i) or i in self.busy:
                raise BoardWrongShipException()
        for i in ship.dots:
            self.field[i.x][i.y] = "■"
            self.busy.append(i)

        self.ships.append(ship)
        self.contour_ship(ship)

    def shot(self, d):
        if self.dot_out(d):
            raise BoardOutException
        if d in self.busy:
            raise BoardUsedException

        self.busy.append(d)

        for ship in self.ships:
            if ship.shooten(d):
                ship.lives -= 1
                self.field[d.x][d.y] = "X"
                if ship.lives == 0:
                    self.destroyed += 1
                    self.contour_ship(ship, verb=True)
                    print("Ship destroyed!")
                    return True # Если поставить False, то после уничтожения корабля ход будет
                                # передаваться, а так не должно быть.
                else:
                    print("Ship hits!")
                    return True

        self.field[d.x][d.y] = "."
        print("Miss!")
        return False

    def begin(self):
        self.busy = []

    def defeat(self):
        return self.destroyed == len(self.ships)


class Player:
    def __init__(self, board, enemy):
        self.board = board
        self.enemy = enemy

    def ask(self):
        raise NotImplementedError

    def move(self):
        while True:
            try:
                target = self.ask()
                repeat = self.enemy.shot(target)
                return repeat
            except BoardException as e:
                print(e)


class AI(Player):
    def ask(self):
        d = Dot(randint(0, 5), randint(0, 5))
        print(f"AI moves {d.x + 1} {d.y + 1}")
        return d

class PL(Player):
    def ask(self):
        while True:
            coordinates = input("Your move: ").split()
            if len(coordinates) != 2:
                print("Input 2 coordinates!")
                continue
            x, y = coordinates

            if not x.isdigit() or not y.isdigit():
                print("Input digits!")
                continue

            x, y = int(x), int(y)

            return Dot(x - 1, y - 1)


class Game:
    def __init__(self, size = 6):
        self.ship_len = [3, 2, 2, 1, 1, 1, 1]
        self.size = size
        player = self.rand_board_gen()
        comp = self.rand_board_gen()
        comp.hidden = True

        self.ai = AI(comp, player)
        self.pl = PL(player, comp)


    def make_board(self):
        board = Board(size=self.size)
        attempts = 0
        for i in self.ship_len:
            while True:
                attempts += 1
                if attempts > 1000:
                    return None
                ship = Ship(Dot(randint(0, self.size), randint(0, self.size)), randint(0, 1), i)
                try:
                    board.add_ship(ship)
                    break
                except BoardWrongShipException:
                    pass
        board.begin()
        return board

    def rand_board_gen(self):
        brd = None
        while brd is None:
            brd = self.make_board()
        return brd

    def greet(self):
        print("-------------------")
        print("     Welcome to    ")
        print("      the game     ")
        print("     Sea battle    ")
        print("-------------------")
        print(" input example: x y")
        print("   x - row number  ")
        print(" y - column number ")

    def draw_board(self):
        print("-" * 20)
        print("Player board:")
        print(self.pl.board)
        print("-" * 20)
        print("AI board:")
        print(self.ai.board)


    def game_loop(self):
        move_qu = 0
        total_moves = 0
        while True:
            self.draw_board()
            if move_qu % 2 == 0:
                print("Player's move!")
                repeat = self.pl.move()
            else:
                print("AI's move!")
                time.sleep(2)
                repeat = self.ai.move()
            if repeat:
                move_qu -= 1

            if self.ai.board.defeat():
                self.draw_board()
                print("-" * 20)
                print(f"Player wins in {total_moves} moves!")
                break
            elif self.pl.board.defeat():
                self.draw_board()
                print("-" * 20)
                print(f"AI wins in {total_moves} moves!")
                break
            move_qu += 1
            total_moves += 1

    def start(self):
        self.greet()
        self.game_loop()



g = Game()
g.start()
